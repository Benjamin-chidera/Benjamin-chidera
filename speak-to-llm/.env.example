# Example environment configuration file
# Copy this to .env and fill in your API keys

# OpenAI API Key (for GPT models and Whisper API)
OPENAI_API_KEY=your_openai_api_key_here

# ElevenLabs API Key (for premium text-to-speech)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Hugging Face API Key (for open-source models)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Provider Configuration
STT_PROVIDER=whisper_local  # Options: whisper_local, whisper_api, google
TTS_PROVIDER=pyttsx3       # Options: pyttsx3, gtts, elevenlabs, openai
LLM_PROVIDER=openai        # Options: openai, huggingface, ollama

# Model Configuration
LLM_MODEL=gpt-3.5-turbo    # OpenAI model name
WHISPER_MODEL=base         # Whisper model size: tiny, base, small, medium, large

# Ollama Configuration (if using local models)
OLLAMA_URL=http://localhost:11434

# Audio Configuration
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1

# Application Settings
LOG_LEVEL=INFO
SAVE_CONVERSATIONS=true
CONVERSATION_DIR=./conversations